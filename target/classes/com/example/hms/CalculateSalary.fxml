            <Cursor fx:constant="TEXT" />
         </cursor></TextField>
      <TextField fx:id="txtf_numOfApp" layoutX="369.0" layoutY="178.0" promptText="Number of appointments" style="-fx-background-color: transparent; -fx-border-color: #7ab1c1; -fx-border-width: 0px 0px 2px 0px;">
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor></TextField>
      <TextField fx:id="txtf_initialSal" layoutX="368.0" layoutY="221.0" promptText="Initial salary" style="-fx-background-color: transparent; -fx-border-color: #7ab1c1; -fx-border-width: 0px 0px 2px 0px;">
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor></TextField>
      <Button fx:id="btn_calc" layoutX="268.0" layoutY="319.0" mnemonicParsing="false" onAction="#CalculateSal" style="-fx-background-color: #7ab1c1;" text="Calculate" textFill="WHITE">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
      <Button fx:id="btn_update" layoutX="359.0" layoutY="319.0" mnemonicParsing="false" onAction="#UpdateDoc" style="-fx-background-color: #7ab1c1;" text="Update" textFill="WHITE">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
      <Button fx:id="btn_back" layoutX="444.0" layoutY="319.0" mnemonicParsing="false" onAction="#GoToAdminLogin" style="-fx-background-color: #7ab1c1;" text="Back" textFill="WHITE">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
   </children>
</AnchorPane>
